{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/app": ["./src/app"],
      "@/ui": ["./src/6-shared/ui"],
      "@/config": ["./src/6-shared/config"],
      "@/widgets": ["./src/3-widgets/"],
      "@/shared": ["./src/6-shared"],
      "@/features": ["./src/4-features"],
      "@/entities": ["./src/5-entities/"],
      "@/scss": ["./src/scss/"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
